{
    "compilerOptions": {
        "strict": true,
        "rootDirs": [
            "src"
        ],
        "outDir": "dist",
        "lib": [
            "es2020"
        ],
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "types": [
            "node",
            "bcrypt"
        ],
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "esm": true
    }
}